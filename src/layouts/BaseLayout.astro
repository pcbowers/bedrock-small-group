---
import '../styles/global.css';

const { title, includeBackButton = true } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body
    class="prose dark:prose-invert bg-white dark:bg-black my-8 mx-auto max-w-prose print:max-w-full print:my-0 print:mx-0 print:leading-snug print:prose-headings:mt-0 print:prose-headings:mb-2 print:prose-h1:mb-4"
  >
    <slot />
    {
      includeBackButton && (
        <div class="mt-16 print:hidden">
          <a href="/">Back to Home</a>
        </div>
      )
    }
    <script src="https://static.esvmedia.org/crossref/crossref.min.js" type="text/javascript"></script>
  </body>
</html>
